//PAKIET

public class Circle2D {
    private double x;
    private double y;
    private double radius;

    public Circle2D(double x, double y, double radius) {
        this.x = x;
        this.y = y;
        this.radius = radius;
    }


    public Circle2D() {
        this.x = 0;
        this.y = 0;
        this.radius = 0.5;
    }
    public double getArea() {
        return Math.PI*Math.pow(radius,2);
    }

    public double getPerimeter(){
        return Math.PI*radius*2;   
    }

}
